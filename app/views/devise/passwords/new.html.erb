<%= render "shared/simple-header"%>
<div class="uk-width-1-2 uk-margin-auto uk-margin-medium-top">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "uk-button uk-button-default" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>