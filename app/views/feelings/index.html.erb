<div class="head">
  <%= render "header" %>
  <ul class="uk-padding" uk-tab>
    <li class="uk-active"><a href="#">ホーム</a></li>
    <li><a href="#">おすすめ</a></li>
    <li><a href="#">マガジン</a></li>
    <li><a href="#">ピックアップ</a></li>
    <li><a href="#">注目</a></li>
    <li><a href="#">人気タグ <span class="uk-margin-small-left" uk-icon="icon: triangle-down"></span></a></li>
  </ul>
</div>
<div class="uk-margin-medium-bottom">
  <div class="uk-grid-match uk-grid-small" uk-grid>
    <div class="uk-width-2-3@m">
      <ul class="uk-comment-list uk-list-divider">
        <% @feelings.each do |feeling| %>
        <li>
          <article class="article uk-comment uk-padding uk-visible-toggle" tabindex="-1">
            <%= link_to "", feeling_path(feeling), class: "linkbox" %>
            <header class="uk-comment-header uk-position-relative">
              <div class="uk-grid-medium uk-flex-middle" uk-grid>
                <div class="uk-width-expand">
                  <h4 class="uk-comment-title uk-margin-remove">
                    <a class="uk-link-reset" href="#"><%=feeling.subject%></a>
                  </h4>
                  <p class="uk-comment-meta uk-margin-remove-top">
                    <a class="uk-link-reset" href="#"><%= time_ago_in_words(feeling.created_at) %></a>
                  </p>
                </div>
              </div>
              <div class="uk-position-top-right">
                <% exist = ActiveStorage::Attachment.find_by(record_id: feeling.id) %>
                <% if exist %>
                <%= image_tag ActiveStorage::Blob.find(exist.blob_id), width: "120" %>
                <% end %>
              </div>
            </header>
            <div class="uk-comment-body">
              <p><%=feeling.organization%></p>
            </div>
          </article>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="uk-width-1-3@m">
      <div>
        <div class="uk-card uk-card-default">
          <div class="uk-card-media-top">
            <%= image_tag "/mountain.jpg"%>
          </div>
          <div class="uk-card-body">
            <h3 class="uk-card-title">Media Top</h3>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>